.upload-image{
  width 200px
  height 200px
  background: #FAFAFA;
  border: 1px dashed #F0F0F0;
  border-radius: 8px;
  .logo-upload {
    width 200px
    height 200px
    background: #FAFAFA;
    border: 1px dashed #F0F0F0;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    flex-direction: column;
    color #999999
    border-radius: 8px;
    &:hover{
      border-color #3F83F7
    }
  }
  .logo-image {
    height: 200px;
    width: 200px;
    align-items: center;
    text-align center;
    border-radius: 3px;
    display: inline-block;
    position: relative;

    > img {
      max-height: 100%;
      max-width: 100%;
      vertical-align middle
    }

    &:hover {
      color: #ccc;
      .cover {
        display: inline-block;
      }
      .cover.is-edit {
        display: none;
      }
    }

    .cover {
      height: 200px;
      width: 200px;
      background-color: rgba(0, 0, 0, 0.5);
      position: absolute;
      left: 0;
      top: 0;
      display: none;
      color: #fff;

      .cover_content {
        width 100%
        height 100%
        text-align center
        display flex
        justify-content space-between
      }

      .left {
        width 50%
        height 100%
        &:hover{
          background #3F83F7
        }
        .icon {
          color #FFFFff
          font-size 30px
        }
      }
      .right {
          width 50%
          height 100%
        &:hover{
          background #3F83F7
        }
         .icon {
            color #FFFFff
            font-size 30px
          }
      }
    }
  }
}

