.login {
  width: 100%;
  height: 100%;
  min-width: 1200px;
  background: url('~@/assets/image/bg.jpg') no-repeat center center;
  background-size: 100% 100%;
  position absolute;

  .login_content {
    width: 1000px;
    height: 582px;
    background: #FFFFFF;
    box-shadow: 0px 10px 60px 0px rgba(12, 78, 196, 0.1);
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;

    .login_left {
      width 600px

      img {
        width 600px;
        height 100%
      }
    }

    .login_right {
      width 400px

      .title {
        margin-top 49px
        text-align center

        img {
          width 56px
        }

        p {
          font-size: 28px;
          margin 37px 0 0
          font-family: PingFang SC;
          font-weight: 800;
          color: #333333;
        }
      }

      .form_con {
        display flex
        width 308px
        margin: 5px 50px 24px 40px;
        border-bottom 1px solid #f7f7f7
        .icon {
          display inline-block
          height 40px
          line-height: 40px;
          font-size: 20px;
          color #999999
          vertical-align: middle

          img {
            width 100%
          }
        }

        .input-class {
          width 260px
        }

        .input-code {
          width 150px
        }
      }

      .login_save {
        margin-top 50px
        text-align center
        button {
          width 308px
          height 60px
          line-height 60px
          background: linear-gradient(90deg, #3C7EF7 0%, #5296F9 100%);
          box-shadow: 0px 4px 15px 0px rgba(13, 121, 252, 0.2);
          border-radius: 30px;
          font-size: 22px;
          font-family: Microsoft YaHei;
          font-weight: 400;
          color: #FFFFFF;
        }
      }
      .login_reg {
        text-align center
        color #999999
        p{
          font-size 15px
        }
      }
    }
  }
}
